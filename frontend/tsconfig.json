{
    "compilerOptions": {
        "target": "es2017",
        "lib": ["dom", "es2017"],
        "module": "esnext",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "jsx": "react-jsx",
        "types": ["vitest", "node", "vite/client"],
        "baseUrl": "./",
        "paths": {
          "@/*": ["src/*"]
        }
      },
      "include": ["src", "src/style/.ts", "src/store/UsersStore.ts"]
}